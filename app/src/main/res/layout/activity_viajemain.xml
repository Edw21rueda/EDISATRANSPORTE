<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_Viajemain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_bg"
    android:padding="20dp"
    tools:context=".ViajemainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:fontFamily="@font/roboto_mono_bold"
            android:gravity="center"
            android:text="Â¡QUE TENGAS UN BUEN VIAJE!"
            android:textSize="28dp" />
    <Button
        android:id="@+id/request_location_updates_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="Iniciar Viaje"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="@drawable/btn_redondeado_white"/>

        <Button
            android:id="@+id/llegada"
            android:onClick="llegada"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="invisible"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@drawable/btn_redondeado_white"
            android:text="Llegada con el cliente"/>

        <Button
            android:id="@+id/gasto"
            android:onClick="gasto"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="invisible"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@drawable/btn_redondeado_white"
            android:text="Agregar Gastos"/>
        <Button
            android:id="@+id/incidente"
            android:visibility="invisible"
            android:textColor="#fff"
            android:onClick="incidente"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_redondeado_white"
            android:text="Agregar Incidente"/>
        <Button
            android:id="@+id/firma"
            android:onClick="firmarcarta"
            android:visibility="invisible"
            android:textColor="#fff"
            android:textSize="18sp"

            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_redondeado_white"
            android:text="Firmar Carta Porte"/>

    <Button
        android:id="@+id/remove_location_updates_button"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        android:textSize="18sp"

        android:textColor="#fff"
        android:background="@drawable/btn_redondeado_white"
        android:layout_height="60dp"
        android:text="Finalizar Viaje"/>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>
