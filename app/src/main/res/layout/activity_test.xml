<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".TestActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="#EBEDEF"
        android:elevation="10dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/featured_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway"
                android:text="ENCUESTA"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="27sp" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="¿La unidad llego llegó en el horario estipulado?"
                />
            <RadioGroup
                android:id="@+id/rg1"
                android:layout_width="303dp"
                android:layout_height="84dp"
                android:layout_marginTop="2dp">

                <RadioButton
                    android:id="@+id/rbtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:onClick="checkButton"
                    android:text="SI" />

                <RadioButton
                    android:id="@+id/rbtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:onClick="checkButton"
                    android:text="NO" />
            </RadioGroup>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="303dp"
                android:layout_height="33dp"
                android:layout_marginTop="2dp"
                android:text="¿La unidad llegó en perfectas condiciones y limpia?" />
            <RadioGroup
                android:id="@+id/rg2"
                android:layout_width="304dp"
                android:layout_height="91dp"
                android:layout_marginTop="2dp">

                <RadioButton
                    android:id="@+id/rbtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:onClick="checkButton"
                    android:text="SI"
                    />

                <RadioButton
                    android:id="@+id/rbtn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:onClick="checkButton"
                    android:text="NO"
                    />
            </RadioGroup>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="¿El operador fue educado y respetuoso?"
                />
            <RadioGroup
                android:id="@+id/rg3"
                android:layout_width="303dp"
                android:layout_height="84dp"
                android:layout_marginTop="2dp"
                >

                <RadioButton
                    android:id="@+id/rbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:onClick="checkButton"
                    android:text="SI" />

                <RadioButton
                    android:id="@+id/rbtn5"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:onClick="checkButton"
                    android:text="NO" />
            </RadioGroup>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="298dp"
                android:layout_height="37dp"
                android:layout_marginTop="2dp"
                android:text="¿El operador se presento limpio y con uniforme de nuestra empresa?" />
            <RadioGroup
                android:id="@+id/rg4"
                android:layout_width="304dp"
                android:layout_height="91dp"
                android:layout_marginTop="2dp">

                <RadioButton
                    android:id="@+id/rbtn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:onClick="checkButton"
                    android:text="SI" />


                <RadioButton
                    android:id="@+id/rbtn7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:onClick="checkButton"
                    android:text="NO" />
            </RadioGroup>
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="COMENTARIOS:"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/editText2"
                android:layout_width="233dp"
                android:layout_height="58dp"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_gravity="center"/>


            <Button
                android:id="@+id/btnfin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="39dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/btn_redondeado_white"
                android:elevation="5dp"
                android:padding="5dp"
                android:textColor="#fff"
                android:text="Finalizar"
                android:visibility="invisible"
                android:textSize="16dp" />


        </LinearLayout>
    </RelativeLayout>

</ScrollView>